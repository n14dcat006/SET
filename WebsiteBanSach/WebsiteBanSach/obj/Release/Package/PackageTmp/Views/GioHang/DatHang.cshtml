
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@using WebsiteBanSach.Models;
@model List<GioHang>
<h2 style="text-align:center; font-weight:bold">THÔNG TIN HÀNG HÓA</h2>
<table class="table-bordered table table-condensed">
    <tr style="text-align:center;font-weight:bold">
        <td>Mã sách</td>
        <td>Ảnh bìa</td>
        <td>Tên sách</td>
        <td>Số lượng</td>
        <td>Đơn giá</td>
        <td>Thành tiền</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center">
            <td>
                @item.iMaSach
            </td>
            <td>
                <img src="@item.sAnhBia" class="image-detail" />
            </td>
            <td>
                @item.sTenSach
            </td>
            <td>
                @item.iSoLuong
            </td>
            <td>
                @String.Format("{0:0,0}", item.dDonGia)
            </td>
            <td>
                @String.Format("{0:0,0}", item.dThanhTien)
            </td>
        </tr>
    }
    <tr style="font-weight:bold; text-align:right">
        <td colspan="4">
            Số lượng sách: @ViewBag.TongSoLuong
        </td>
        <td colspan="5">
            Tổng tiền: @ViewBag.TongTien VNĐ
        </td>
    </tr>
    <tr>
        <td colspan="6">
            <a href="/GioHang/GioHang" style="text-align:center;text-decoration:none">Trở về giỏ hàng</a>
        </td>
    </tr>
</table>
<h2 style="text-align:center;font-weight:bold">THÔNG TIN ĐƠN HÀNG</h2>
@{
    KhachHang kh = (KhachHang)Session["TaiKhoan"];
}
@if (ViewBag.Thongbao != null)
{
    <div class="alert-success">
        @ViewBag.Thongbao
    </div>
}
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr>
            <td>Họ tên khách hàng</td>
            <td>@kh.HoTen</td>
        </tr>
        <tr>
            <td>Địa chỉ</td>
            <td>@kh.DiaChi</td>
        </tr>
        <tr>
            <td>Điện thoại</td>
            <td>@kh.DienThoai</td>
        </tr>
        <tr>
            <td>Ngày đặt</td>
            <td>@DateTime.Now.ToString(string.Format("dd/MM/yyyy"))</td>
        </tr>
        
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đặt hàng" />
            </td>
        </tr>
    }
</table>

