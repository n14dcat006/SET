
@{
    ViewBag.Title = "XacMinh";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link href="~/Content/MyContent.css" rel="stylesheet" />
    <script src="~/Scripts/vendor/modernizr-2.6.2.min.js"></script>
</head>
<body>
    <div class="content-section">
        <div class="container">
            <div class="col-md-6">
                <h3 class="widget-title">XÁC MINH TÀI KHOẢN</h3>
                <br />
                @if (ViewBag.ThongBao != null)
                {
                    <div class="alert-success">
                        @ViewBag.ThongBao
                    </div>
                }
                <form class="contactform" action="/Giohang/XacMinh" method="post">

                    <p>
                        <input name="MatKhau" type="password" placeholder="Mật khẩu tài khoản ngân hàng" required>
                    </p>
                    <p>
                        <input name="OTP" type="password" placeholder="Mã xác thực OTP" required>
                    </p>

                    <input type="submit" class="mainBtn" value="Xác nhận" />
                </form>
            </div>
        </div>
    </div>
</body>

