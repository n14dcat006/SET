
@{
    ViewBag.Title = "CreateNXB";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link href="~/Content/MyContent.css" rel="stylesheet" />
    <script src="~/Scripts/vendor/modernizr-2.6.2.min.js"></script>
</head>
<body>
    <div class="content-section">
        <div class="container">
            <div class="col-md-6">
                <h3 class="widget-title">Nhà xuất bản</h3>
                <br />
                <form class="contactform" action="/NhaXuatBan/CreateNXB" method="post">
                    <p>
                        <input name="TenNXB" type="text" placeholder="Tên nhà xuất bản" required />
                    </p>
                    <p>
                        <input name="DiaChi" type="text" placeholder="Địa chỉ" required>
                    </p>
                    <p>
                        <input name="DienThoai" type="text" placeholder="Điện thoại" maxlength="14" pattern="[0-9].{1,}" required>
                    </p>
                    <input type="submit" class="mainBtn" value="Tạo mới" />
                </form>
            </div>
        </div>
    </div>
</body>

