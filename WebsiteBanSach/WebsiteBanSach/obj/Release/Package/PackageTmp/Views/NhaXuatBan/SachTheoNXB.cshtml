
@{
    ViewBag.Title = "SachTheoNXB";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/MyContent.css" rel="stylesheet" />
</head>

<body>
    @foreach (var nxb in Model)
    {
        <div class="content-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 section-title">
                        <h2>@nxb.TenNXB</h2>
                    </div> <!-- /.section -->
                </div> <!-- /.row -->
                <div class="row">
                    @foreach (var sach in ViewBag.listSach)
                    {
                        if (nxb.MaNXB == sach.MaNXB)
                        {
                            <div class="col-md-3 col-sm-6">
                                <div class="product-item-2">
                                    <div class="product-thumb">
                                        <img src="@sach.AnhBia">
                                    </div> <!-- /.product-thumb -->
                                    <div class="product-content overlay">
                                        <h5><a href="/Sach/DetailSach?id=@sach.MaSach">@sach.TenSach</a></h5>
                                        <span class="price">@sach.GiaBan</span>
                                    </div> <!-- /.product-content -->
                                </div> <!-- /.product-item -->
                            </div> <!-- /.col-md-3 -->
                        }
                    }
                </div>
            </div> <!-- /.container -->
        </div> <!-- /.content-section -->
    }
</body>

