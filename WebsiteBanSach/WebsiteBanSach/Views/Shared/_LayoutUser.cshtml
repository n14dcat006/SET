<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/MyContent.css" rel="stylesheet" />
    <script src="~/Scripts/vendor/modernizr-2.6.2.min.js"></script>
</head>
<body>
    @using WebsiteBanSach.Models;
    <header class="site-header">
        <div class="top-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="top-header-left">
                            <a href="~/NguoiDung/DangKy">Sign Up</a>
                            <a href="~/NguoiDung/DangNhap">Log In</a>
                            <a href="/NguoiDung/DangXuat">Log Out</a>
                        </div> <!-- /.top-header-left -->
                    </div> <!-- /.col-md-6 -->
                    <div class="col-md-4">
                        <div class="social-icons">
                            <ul>
                                @{ 
                                    KhachHang kh = (KhachHang)Session["TaiKhoan"];
                                }
                                @if (HttpContext.Current.Session["TaiKhoan"] != null)
                                {
                                    <li style="color:#2a80b9">@kh.TaiKhoan</li>
                                }
                                else
                                {
                                    if (HttpContext.Current.Session["TenAdmin"] != null)
                                    {
                                        <li style="color:#2a80b9">@Session["TenAdmin"]</li>
                                    }
                                    else
                                    {
                                        <li style="color:#2a80b9">My Account</li>
                                    }
                                }
                                @if (HttpContext.Current.Session["GioHang"] != null)
                                {
                                    <li>
                                        @Html.Action("GioHangPartial","Giohang");
                                    </li>
                                }
                                else
                                {
                                    <li><a href="/GioHang/GioHang" style="color:#2a80b9">Giỏ hàng</a></li>
                                }
                            </ul>
                            <div class="clearfix"></div>
                        </div> <!-- /.social-icons -->
                    </div> <!-- /.col-md-6 -->
                </div> <!-- /.row -->
            </div> <!-- /.container -->
        </div> <!-- /.top-header -->

        <div class="main-header">
            <div id="templatemo_header">
                <div id="templatemo_special_offers">
                    <p>
                        Welcome to my website!
                    </p>
                    <p style="padding-left:100px">
                                Have a nice day...
                    </p>
                </div> <!-- /.row -->
            </div> <!-- /.container -->
        </div> <!-- /.main-header -->

        <div class="main-nav">
            <div class="container">
                <div class="row">
                    <div class="col-md-10">
                        <div class="list-menu">
                            <ul>
                                <li><a href="~/Home/Index">Home</a></li>
                                <li>
                                        @Html.Action("ChuDePartial", "ChuDe")
                                </li>
                                <li>
                                    @Html.Action("NXBPartial","NhaXuatban")
                                </li>
                                <li><a href="~/Sach/TongHopSach">Sách</a></li>
                                @if (HttpContext.Current.Session["TenAdmin"] != null)
                                {
                                    <li>
                                        <a data-toggle="dropdown">Quản Lý<span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="~/Sach/QuanLySach">Quản lý sách</a></li>
                                            <li><a href="/ChuDe/QuanLyChuDe">Quản lý chủ đề</a></li>
                                            <li><a href="/NhaXuatBan/QuanLyNXB">Quản lý nhà xuất bản</a></li>
                                            <li><a href="/Admin/QuanLyAdmin">Quản lý Admin</a></li>
                                            <li><a href="/Giohang/QuanLyDonHang">Quản lý đơn hàng</a></li>
                                            <li><a href="/NguoiDung/QuanLyNguoiDung">Quản lý user</a></li>
                                            <li><a href="/TacGia/QuanLyTacGia">Quản lý tác giả</a></li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div> <!-- /.list-menu -->
                    </div> <!-- /.col-md-10 -->
                    <div class="col-md-2">
                        <div class="list-menu">
                            <ul>
                                <li>
                                    @using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Get))
                                    {
                                        <div class="input-group">
                                            <input type="search" name="txtTimKiem" placeholder="Search.." />
                                            <div class="input-group-btn">
                                                <button type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                            </div>
                                        </div>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>
                </div> <!-- /.row -->
            </div> <!-- /.container -->
        </div> <!-- /.main-nav -->
    </header> <!-- /.site-header -->

    <div>@RenderBody()</div>

    <footer class="site-footer">
        <div class="our-partner">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div id="owl-demo" class="owl-carousel">
                            <div class="item">
                                <a href="#"><img src="~/Images/alphabooks.jpg" /></a>
                            </div>
                            <div class="item">
                                <a href="#">
                                    <img src="~/Images/dinhti.jpg" />
                                </a>
                            </div>
                            <div class="item">
                                <a href="#">
                                    <img src="~/Images/firstnews.jpg" />
                                </a>
                            </div>
                            <div class="item">
                                <a href="#">
                                    <img src="~/Images/tre.jpg" />
                                </a>
                            </div>
                            <div class="item">
                                <a href="#">
                                    <img src="~/Images/goldenbook.jpg" />
                                </a>
                            </div>
                            <div class="item">
                                <a href="#">
                                    <img src="~/Images/kimdong.jpg" />
                                </a>
                            </div>
                            <div class="item">
                                <a href="#">
                                    <img src="~/Images/nhanam.jpg" />
                                </a>
                            </div>
                            <div class="item">
                                <a href="#">
                                    <img src="~/Images/phuongnam.jpg" />
                                </a>
                            </div>
                            <div class="item">
                                <a href="#">
                                    <img src="~/Images/quangvan.jpg" />
                                </a>
                            </div>
                            <div class="item">
                                <a href="#">
                                    <img src="~/Images/thaiha.jpg" />
                                </a>
                            </div>
                        </div> <!-- /#owl-demo -->
                    </div> <!-- /.col-md-12 -->
                </div> <!-- /.row -->
            </div> <!-- /.container -->
        </div> <!-- /.our-partner -->
    </footer> <!-- /.site-footer -->

    <script src="~/Scripts/vendor/jquery-1.10.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/Scripts/vendor/jquery-1.10.1.min.js"><\/script>')</script>
    <script src="~/Scripts/jquery.easing-1.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/plugins.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>
