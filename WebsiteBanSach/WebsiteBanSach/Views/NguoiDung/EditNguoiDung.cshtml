
@{
    ViewBag.Title = "EditNguoiDung";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@model WebsiteBanSach.Models.KhachHang
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/MyContent.css" rel="stylesheet" />
    <script src="~/Scripts/vendor/modernizr-2.6.2.min.js"></script>
</head>

<body>
    @using (Html.BeginForm("EditNguoiDung", "NguoiDung", new { id = Model.MaKH }, FormMethod.Post, new { @class = "contactform" }))
    {
        @Html.ValidationSummary(true)
        <div class="content-section">
            <div class="container">
                <div class="col-md-6">
                    <h3 class="widget-title">Chỉnh sửa user</h3>
                    <br />
                    <form class="contactform">
                        <h5><label>Tên tài khoản</label></h5>
                        <p>
                            @Html.TextBoxFor(model => model.TaiKhoan, new { @required = "true", placeholder = "Tên tài khoản" });
                        </p>
                        <h5><label>Họ tên</label></h5>
                        <p>
                            @Html.TextBoxFor(model => model.HoTen, new { @required = "true", placeholder = "Họ tên" });
                        </p>
                        <h5><label>Mật khẩu</label></h5>
                        <p>
                            @Html.PasswordFor(model => model.MatKhau, new { @required = "true", placeholder = "Mật khẩu" });
                        </p>
                        <h5><label>Nhập lại mật khẩu</label></h5>
                        <p>
                            <input name="NhapLaiMatKhau" type="password" required />
                        </p>
                        @if (ViewBag.Thongbao != null)
                        {
                            <div class="alert-success">
                                @ViewBag.Thongbao
                            </div>
                        }
                        <h5><label>Email</label></h5>
                        <p>
                            @Html.TextBoxFor(model => model.Email, new { @required = "true", placeholder = "Email", Type="Email" });
                        </p>
                        <h5><label>Địa chỉ</label></h5>
                        <p>
                            @Html.TextBoxFor(model => model.DiaChi, new { @required = "true", placeholder = "Địa chỉ" });
                        </p>
                        <h5><label>Điện thoại</label></h5>
                        <p>
                            @Html.TextBoxFor(model => model.DienThoai, new { @required = "true", placeholder = "Điện thoại", pattern = "[0-9].{1,13}" });
                        </p>
                        <h5><label>Giới tính</label></h5>
                        <p>
                            @Html.DropDownListFor(model => model.GioiTinh, new List<SelectListItem>{
                           new SelectListItem {Text="Nam", Value="Nam" },
                           new SelectListItem {Text="Nữ", Value="Nữ" }
                           });
                        </p>
                        <h5><label>Ngày sinh</label></h5>
                        <p>
                            <input type="date" name="NgaySinh" value="@ViewBag.ngay" required />
                        </p>
                        <input type="submit" class="mainBtn" value="Lưu">
                    </form>
                </div>
            </div>
        </div> <!-- /.content-section -->
    }
</body>

