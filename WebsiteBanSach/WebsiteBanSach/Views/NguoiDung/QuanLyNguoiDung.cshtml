
@{
    ViewBag.Title = "QuanLyNguoiDung";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@if (ViewBag.Thongbao != null)
{
    <div class="alert-success">
        @ViewBag.Thongbao
    </div>
}
<h2>Quản lý người dùng</h2>
<h4><a href="/NguoiDung/DangKy">Thêm mới</a></h4><br />
@using (Html.BeginForm("QuanLyNguoiDung", "NguoiDung", FormMethod.Get))
{
    <div class="col-md-4">
        <input type="text" name="txtTimKiem" value="@ViewBag.tukhoa" placeholder="Search tài khoản" />
        <button type="submit" class="mainBtn">Search</button>
    </div>
}
<br />
<table class="table">
    <tr>
        <th>Mã khách hàng</th>
        <th>Tên khách hàng</th>
        <th>Tên tài khoản</th>
        <th>Email</th>
        <th>Địa chỉ</th>
        <th>Điện thoại</th>
        <th>Giới tính</th>
        <th>Ngày sinh</th>
        <th>Tùy chọn</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.MaKH</td>
            <td>@item.HoTen</td>
            <td>@item.TaiKhoan</td>
            <td>@item.Email</td>
            <td>@item.DiaChi</td>
            <td>@item.DienThoai</td>
            <td>@item.GioiTinh</td>
            <td>@item.NgaySinh.ToString(string.Format("dd/MM/yyyy"))</td>
            <td>
                <a href="/NguoiDung/DeleteNguoiDung?id=@item.MaKH">Xóa</a>
                <a href="/NguoiDung/EditNguoiDung?id=@item.MaKH">Sửa</a>
            </td>
        </tr>
    }
</table>
