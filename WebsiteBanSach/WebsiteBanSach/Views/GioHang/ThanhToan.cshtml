
@{
    ViewBag.Title = "XacMinh";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@{ 
    var variable = Convert.ToString(ViewBag.customerInfo);
}
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link href="~/Content/MyContent.css" rel="stylesheet" />
    <script src="~/Scripts/vendor/modernizr-2.6.2.min.js"></script>
</head>
<body class="PageType">
    
    <div class="content-section">
        <div class="container">
            <div class="col-md-6">
                <h3 class="widget-title">THANH TOÁN ĐƠN HÀNG</h3>
                
                <form class="contactform" action="/Giohang/ThanhToan" method="post">
                    <br />
                    <br />
                    <h5><label>Thanh toán theo Secure Electronic Transaction</label></h5>
                    <br />
                    <br />
                    <h5><label>Website sẽ mở chương trình thanh toán</label></h5>
                    <br />
                    <br />
                    <input type="submit" onclick="LaunchApp('@variable')" class="mainBtn" value="Thanh toán" />
                </form>
            </div>
        </div>
    </div>
</body>
<script>
    function LaunchApp(s) {
        
        var para = "".concat(s);
        var objShell = new ActiveXObject("WScript.Shell");
        objShell.Exec('"d:/file/Customer.exe" "' + para + '"');        
    };
</script>